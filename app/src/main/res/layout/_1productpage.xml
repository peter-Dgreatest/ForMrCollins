<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ff4400">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="40dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/ww"
    app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:background="@drawable/as"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Analysis"
                android:padding="10dp"
                android:layout_marginTop="1dp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/lato"

                android:gravity="center"
                android:textColor="#ff4400"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_margin="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/ovalpink"
                    android:text="03"
                    app:layout_constraintDimensionRatio="1:1"
                    android:gravity="center"
                    android:id="@+id/tt1"
                    android:textColor="#ff4400"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tt1"
                    android:text="All Products"
                    android:textColor="#ff4400"
                    android:gravity="center|bottom"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/oval"
                    android:text="03"
                    android:textColor="#4CAF50"
                    app:layout_constraintDimensionRatio="1:1"
                    android:gravity="center"
                    android:id="@+id/tt11"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tt11"
                    android:text="Active Products"
                    android:textColor="#4CAF50"
                    android:gravity="center|bottom"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_margin="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/ovalash"
                    android:text="03"
                    android:textColor="#868786"
                    app:layout_constraintDimensionRatio="1:1"
                    android:gravity="center"
                    android:id="@+id/tt12"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#868786"
                    app:layout_constraintTop_toBottomOf="@id/tt12"
                    android:text="Inactive Products"
                    android:gravity="center|bottom"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_margin="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/ovalblack"
                    android:text="03"
                    android:textColor="#020202"
                    app:layout_constraintDimensionRatio="1:1"
                    android:gravity="center"
                    android:id="@+id/tt13"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#020202"
                    app:layout_constraintTop_toBottomOf="@id/tt13"
                    android:text="Not in use"
                    android:gravity="center|bottom" />
            </androidx.constraintlayout.widget.ConstraintLayout>





        </LinearLayout>






    </LinearLayout>



</androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edit"
        app:layout_constraintTop_toBottomOf="@id/ww"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:text="List Of Products"/>

        <View
            android:layout_width="40dp"
            android:layout_height="6dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:background="#ff4400"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/as"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_height="wrap_content" >



                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ovalfade"
                    android:backgroundTint="@color/tranmain"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/ic_outline_navigation_24"
                    android:backgroundTint="#ff4400"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>




            </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:foregroundGravity="center"
                    android:background="@drawable/rounded_edit"
                    android:backgroundTint="#0E8741"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Active"/>
        </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Wallet"
                    android:textColor="#4F4F4F"
                    android:gravity="center_horizontal"
                    />

        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/as"
                android:layout_marginLeft="3dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content" >



                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ovalfade"
                        android:backgroundTint="@color/tranmain"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_outline_navigation_24"
                        android:backgroundTint="#ff4400"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:foregroundGravity="center"
                    android:background="@drawable/rounded_edit"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="InActive"/>
            </FrameLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Web POS"
                    android:textColor="#4F4F4F"
                    android:gravity="center_horizontal"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/as"
                android:layout_marginLeft="3dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content" >



                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ovalfade"
                        android:backgroundTint="@color/tranmain"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_outline_navigation_24"
                        android:backgroundTint="#ff4400"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:foregroundGravity="center"
                    android:background="@drawable/rounded_edit"
                    android:backgroundTint="#050505"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Not In Use"/>
            </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Terminal POS"
                    android:textColor="#4F4F4F"
                    android:gravity="center_horizontal"
                    />

            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/bottom_nav_loader"/>


</androidx.constraintlayout.widget.ConstraintLayout>
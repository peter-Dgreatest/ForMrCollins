<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/btn_nav"
    app:layout_constraintBottom_toBottomOf="parent"
    android:orientation="horizontal"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_outline_home_24"
            android:text="Home"
            android:textSize="12sp"
            android:textColor="#D5D3D3"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_outline_navigation_24"
        android:text="Discover"
        android:textSize="12sp"
        android:textColor="#D5D3D3"
        android:layout_gravity="center"
        android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF4400"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_outline_dns_24"
        android:drawableTint="#FF4400"
        android:text="Products"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:textColor="#D5D3D3"
        android:drawableTop="@drawable/ic_baseline_notifications_none_24"
        android:text="Notifications"
        android:layout_gravity="center"
        android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_outline_chat_bubble_outline_24"
        android:text="Chat"
        android:textSize="12sp"
        android:textColor="#D5D3D3"
        android:layout_gravity="center"
        android:gravity="center"/>
    </LinearLayout>


</LinearLayout>
